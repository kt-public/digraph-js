{
	"name": "@ktarmyshov/digraph-js",
	"description": "[yet another] A dependency free library to create and traverse directed graphs",
	"version": "0.2.3",
	"license": "MIT",
	"author": {
		"name": "Konstantin Tarmyshov",
		"email": "k.tarmyshov@googlemail.com"
	},
	"keywords": [
		"node",
		"javascript",
		"typescript",
		"nodejs",
		"node_modules",
		"tree",
		"npm",
		"graph",
		"visualization",
		"dependencies",
		"lightweight"
	],
	"homepage": "https://github.com/kt-public/digraph-js#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kt-public/digraph-js.git"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "rimraf ./dist && tsc --project tsconfig.json && npm run prepack",
		"build:release": "rimraf ./dist && tsc --project tsconfig-release.json && npm run prepack",
		"prepare": "echo 'This is called after installing the package locally.'",
		"prepack": "publint",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"check": "tsc --skipLibCheck",
		"check:test": "tsc --project tsconfig-test.json --skipLibCheck",
		"benchmark": "cd tests/benchmarks/webpack && tsx ./find-cycles.ts",
		"test": "npm run check:test && vitest run && npm run benchmark",
		"coverage": "vitest run --coverage",
		"changeset:version": "changeset version && git add --all",
		"changeset:publish": "changeset publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!tests",
		"!examples",
		"!benchmarks"
	],
	"bugs": {
		"url": "https://github.com/kt-public/digraph-js/issues"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@eslint/compat": "^1.2.7",
		"@types/node": "^22.13.10",
		"@vitest/coverage-istanbul": "^3.1.1",
		"@vitest/coverage-v8": "^3.1.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.2",
		"prettier": "^3.5.3",
		"publint": "^0.3.11",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1",
		"vitest": "^3.0.8"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
